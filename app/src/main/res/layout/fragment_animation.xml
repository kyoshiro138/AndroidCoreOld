<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_animation_zoom_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZOOM OUT ANIMATION"/>
    <Button
        android:id="@+id/btn_animation_fade_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FADE OUT ANIMATION"/>
    <FrameLayout
        android:id="@+id/view_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/c_debug_solid_blue"/>
    </FrameLayout>

</LinearLayout>